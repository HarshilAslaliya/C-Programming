#include<stdio.h>
#include<conio.h>
#define P printf
#define S scanf

main()
{
	char a;
	clrscr();

	P("M press for Monday\n");
	P("T press for Tueday\n");
	P("W press for Wednesday\n");
	P("t press for Thursday\n");
	P("F press for Friday\n");
	P("S press for Saturday\n");
	P("s press for Sunday\n\n");

	P("Enter your choice = ");
	S("%c",&a);

	switch(a)
	{
		case 'M':
			 P("Today is Monday");
			 break;
		case 'T':
			 P("Today is Tuesday");
			 break;
		case 'W':
			 P("Today is Wednesday");
			 break;
		case 't':
			 P("Today is Thursday");
			 break;
		case 'F':
			 P("Today is Friday");
			 break;
		case 'S':
			 P("Today is Saturday");
			 break;
		case 's':
			 P("Today is Sunday");
			 break;
		default:
			 P("Invalid Choice");
			 break;

	}


	getch();

}